@model Product

<form method="post">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-7 col-lg-7">
                <div class="row align-items-center">
                    <div class="col-6">
                        <h3 class="mb-0">@Model.Name</h3>
                    </div>
                    <div class="col-6 text-end">
                        <span class="badge bg-info"><h6 class="mb-0">@Model.Category.Name</h6></span>
                    </div>
                    <div class="row">
                        <h5 class="pt-3 text-danger fw-bold">@Model.Price.ToString("c")</h5>
                        <h6>@Model.Size</h6>
                    </div>
                    <div class="row">
                        <h6 class="my-2">@Model.Description</h6>
                    </div>
                </div>
                <div class="col-12 col-lg-5 align-self-start">
                    <img src="@Model.ImageUrl" width="100%" class="rounded" />
                </div>
            </div>
            <div class="bg-white mt-5 mb-3">
                <div class="row align-items-center">
                    <div class="col-12 col-md-6 pb-1">
                        <a class="btn btn-light form-control text-primary d-flex justify-content-center align-items-center" style="height:50px;" asp-action="Index">返回列表</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
